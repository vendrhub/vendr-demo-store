@model GiftCardReadOnly
@{
    // ========================================================
    //                I M P O R T A N T
    // ========================================================
    // THIS FILE WILL GET REPLACED DURING AN UPGRADE AND ANY
    // CHANGES YOU MAKE TO IT WILL BE LOST
    // ========================================================
    // DO NOT edit this file directly. If you need to change
    // it's behaviour, always take a copy and modify the copy,
    // updating the Email Template to use your new version.
    // ========================================================

    // Get order entities
    var store = VendrApi.Instance.GetStore(Model.StoreId);
    var themeColor = "249bff";

    var baseUrl = HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority);
}
<style type="text/css">
    #vendr, #vendr td, #vendr p {
        font-family: sans-serif;
        font-size: 14px;
        line-height: 18px;
        color: #5f6a70;
    }

        #vendr td {
            vertical-align: top;
        }

        #vendr .rounded {
            border-radius: 4px;
            -moz-border-radius: 4px;
            -webkit-border-radius: 4px;
        }
</style>
<div id="vendr" style="font-family: sans-serif; font-size: 14px; line-height: 18px; color: #5f6a70;">
    <table style="background-color: #f5f5f5; width: 100%;">
        <tr>
            <td style="padding: 40px;">

                <table style="background-color: white; width: 100%; max-width: 700px; margin: 0 auto;">
                    <tr>
                        <td style="padding: 40px;">
                            <div style="text-align: center;">

                                <h1 class="margin: 0 0 20px; font-size: 30px; line-height: 38px; color: #000;"><a href="@(baseUrl)" style="color: #000;" target="_blank">@(store.Name)</a></h1>

                                <hr style="border: 0; height: 1px; background: #ebebe9; margin: 20px 0;" />
                                <h2 style="margin: 0 0 20px; font-size: 20px; line-height: 28px; color: #@(themeColor);">Here is your Gift Card for @(store.Name)</h2>

                                <table style="background-color: #@(themeColor); border-radius: 10px; width: 400px; margin: 0 auto 20px;">
                                    <tr>
                                        <td style="padding: 40px 20px;">
                                            <table style="width: 100%;">
                                                <tr>
                                                    <td style="color:white; font-size: 60px; line-height: 60px; padding-bottom: 15px;text-align: center;">@(Model.OriginalAmount.Formatted())</td>
                                                </tr>
                                                <tr>
                                                    <td style="background-color:white; font-size: 20px; line-height: 20px; color: #@(themeColor); text-align: center; padding: 5px 10px;">@(Model.Code)</td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>

                                <p>
                                    Use this card as payment for anything you like at the @(store.Name) store. Enter the redemption code at checkout to redeem your gift card.
                                </p>
                            </div>

                            <hr style="border: 0; height: 1px; background: #ebebe9; margin: 20px 0;" />
                            <p style="text-align: center;">
                                <a href="@(baseUrl + "/terms-and-conditions/")" target="_blank" style="color: #@(themeColor);">Terms of Service</a> | <a href="@(baseUrl + "/privacy-policy/")" target="_blank" style="color: #@(themeColor);">Privacy Policy</a>
                            </p>
                            <p style="text-align: center; margin-bottom: 0;">@(store.Name)</p>

                        </td>
                    </tr>

                </table>

            </td>
        </tr>
    </table>
</div>